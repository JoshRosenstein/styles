{
  "name": "@dash-ui/styles",
  "version": "0.5.0",
  "homepage": "https://github.com/dash-ui/styles#readme",
  "repository": "github:dash-ui/styles",
  "bugs": "https://github.com/dash-ui/styles/issues",
  "author": "Jared Lunde <jared.lunde@gmail.com> (https://jaredLunde.com)",
  "license": "MIT",
  "description": "Yet another CSS-in-JS library. Based on Facebook's internal styling library as seen at React Conf 2019.",
  "keywords": [
    "styles",
    "css-in-js",
    "css",
    "css variables",
    "themes",
    "theming",
    "react",
    "svelte",
    "vue",
    "stylesheet",
    "stylesheets",
    "ssr",
    "dash ui",
    "dash",
    "css-in-react",
    "css-in-vue",
    "css-in-svelte"
  ],
  "main": "dist/main/index.js",
  "module": "dist/module/index.js",
  "unpkg": "dist/umd/dash.js",
  "source": "src/index.ts",
  "types": "types/index.d.ts",
  "files": [
    "/src",
    "/dist",
    "/types",
    "/server"
  ],
  "exports": {
    ".": {
      "browser": "./dist/module/index.js",
      "import": "./dist/esm/index.mjs",
      "require": "./dist/main/index.js",
      "umd": "./dist/umd/dash.js",
      "source": "./src/index.ts",
      "types": "./types/index.d.ts",
      "default": "./dist/main/index.js"
    },
    "./server": {
      "browser": "./server/dist/module/index.js",
      "import": "./server/dist/esm/index.mjs",
      "require": "./server/dist/main/index.js",
      "source": "./server/src/index.ts",
      "types": "./server/types/index.d.ts",
      "default": "./server/dist/main/index.js"
    },
    "./package.json": "./package.json",
    "./": "./"
  },
  "sideEffects": false,
  "scripts": {
    "build": "lundle build",
    "check-types": "lundle check-types",
    "dev": "lundle build -f module,cjs -w",
    "format": "prettier --write \"{,!(node_modules|dist|coverage)/**/}*.{ts,js,md,yml,json}\"",
    "lint": "eslint . --ext .ts",
    "prerelease": "npm run lint && npm run test && npm run build",
    "release": "git add . && standard-version -a",
    "test": "jest",
    "validate": "lundle check-types && npm run lint && jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lundle check-types && lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.{ts,js}": [
      "eslint",
      "prettier --write"
    ],
    "**/*.{md,yml,json}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": [
      "lunde"
    ],
    "rules": {
      "prefer-const": "off",
      "prefer-rest-params": "off"
    }
  },
  "eslintIgnore": [
    "node_modules",
    "coverage",
    "dist",
    "test",
    "*.config.js"
  ],
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "src",
      "server/src",
      "test"
    ],
    "moduleNameMapper": {
      "@dash-ui/styles": "<rootDir>/src/index.ts"
    },
    "testMatch": [
      "<rootDir>/{server/src,src}/**/?(*.)test.ts"
    ],
    "collectCoverageFrom": [
      "**/src/**/*.ts"
    ],
    "setupFilesAfterEnv": [
      "./test/setup.js"
    ],
    "snapshotResolver": "./test/resolve-snapshot.js",
    "globals": {
      "__DEV__": true
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": false
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/jest": "latest",
    "babel-jest": "latest",
    "crc": "^3.8.0",
    "eslint": "latest",
    "eslint-config-lunde": "latest",
    "husky": "latest",
    "jest": "latest",
    "lint-staged": "latest",
    "lundle": "^0.3.3",
    "prettier": "latest",
    "standard-version": "^8.0.0",
    "typescript": "latest"
  },
  "dependencies": {
    "@dash-ui/stylis": "^1.0.3",
    "@dash-ui/unitless": "^2.0.0"
  },
  "peerDependencies": {}
}
