{
  "name": "@-ui/styles",
  "version": "1.0.11",
  "homepage": "https://github.com/dash-ui/styles#readme",
  "repository": "github:dash-ui/styles",
  "bugs": "https://github.com/dash-ui/styles/issues",
  "license": "MIT",
  "description": "Yet another CSS-in-JS library based on Facebook's internal styling library as seen at React Conf 2019",
  "keywords": [
    "styles",
    "css-in-js",
    "css",
    "themes",
    "theming",
    "react",
    "svelte",
    "vue",
    "stylesheet",
    "stylesheets",
    "ssr"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "umd:main": "dist/umd/-ui.min.js",
  "unpkg": "dist/umd/-ui.min.js",
  "files": [
    "/dist",
    "/server"
  ],
  "sideEffects": false,
  "scripts": {
    "bench": "babel-node ./benchmarks",
    "build": "npm run build:cjs && npm run build:es && npm run build:server && npm run build:umd",
    "build:cjs": "babel src -d dist/cjs -x .js --ignore \"**/*.test.js\",\"**/test.js\" --delete-dir-on-start",
    "build:es": "cross-env BABEL_ENV=es babel src -d dist/es -x .js --ignore \"**/*.test.js\",\"**/test.js\" --delete-dir-on-start",
    "build:server": "babel server-src -d server -x .js --ignore \"**/*.test.js\",\"**/test.js\" --delete-dir-on-start",
    "build:umd": "rollup -c",
    "format": "prettier --write \"**/*.{js,md,yml,json,babelrc,eslintrc,prettierrc}\"",
    "lint": "eslint .",
    "prepublishOnly": "npm run lint && npm run test && npm run build && npm run format",
    "test": "jest",
    "validate": "npm run lint && npm run test -- --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "eslint",
      "prettier --write"
    ],
    "**/*.{md,yml,json,babelrc,eslintrc,prettierrc}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/node": "^7.7.0",
    "@essentials/benchmark": "^1.0.5",
    "@lunde/babel-preset-es": "latest",
    "babel-eslint": "latest",
    "cross-env": "latest",
    "eslint": "latest",
    "eslint-import-resolver-jest": "latest",
    "eslint-plugin-jest": "latest",
    "husky": "latest",
    "jest": "latest",
    "lint-staged": "latest",
    "prettier": "latest",
    "rimraf": "^2.6.3",
    "rollup": "^1.26.3",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^5.1.2"
  },
  "dependencies": {
    "@emotion/stylis": "^0.8.4",
    "@emotion/unitless": "^0.7.4",
    "trie-memoize": "^1.0.15"
  },
  "peerDependencies": {}
}
